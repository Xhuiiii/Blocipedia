<h1><%= @wiki.title %></h1>
<div class="row">
	<div class="col-md-8">
		<p><%= @wiki.body %></p>
		<% if @wiki.user.username? %>
			<p><%= "User: #{@wiki.user.username}" %></p>
		<% else %>
			<p><%= "User: #{@wiki.user.email}" %></p>
		<% end %>
	</div>
	<% if current_user && policy(@wiki).admin_or_owner? %>
		<div class="col-md-4">
			<%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
			<%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
		</div>
	<% else %>
		<%= "#{current_user.role}" %>
			
	<% end %>
</div>
